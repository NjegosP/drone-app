{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/assets/*": ["lib/assets/*"]
        },
        "types": ["vitest/globals", "@testing-library/jest-dom"]
    },
    "include": ["lib/**/*", "vite-env.d.ts"]
}
