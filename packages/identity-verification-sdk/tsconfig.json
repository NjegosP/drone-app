{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/assets/*": ["assets/*"]
        }
    },
    "include": ["lib/**/*", "assets/**/*", "vite-env.d.ts", "vite.config.ts"],
    "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx"]
}
