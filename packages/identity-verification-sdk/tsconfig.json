{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "declaration": true,
        "emitDeclarationOnly": false,
        "outDir": "dist",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/assets/*": ["assets/*"]
        }
    },
    "include": ["lib/**/*", "vite-env.d.ts"]
}
